{
  "name": "mca-beacons-webapp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest",
    "test:staged": "jest -o",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write '**/*.{js,jsx,json,ts,tsx,yml,md,html,scss,css}'",
    "format:check": "prettier --check '**/*.{js,jsx,json,ts,tsx,yml,md,html,scss,css}'",
    "postinstall": "scripts/post-install.sh",
    "cypress:open": "cypress open",
    "cypress:watch": "cypress open --config watchForFileChanges=true",
    "cypress:run": "cypress run",
    "cypress:run:firefox": "cypress run --browser firefox"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "cookie": "^0.4.1",
    "google-libphonenumber": "^3.2.18",
    "govuk-frontend": "^3.11.0",
    "next": "10.0.8",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "urlencoded-body-parser": "^3.0.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@jest/types": "^26.6.2",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@types/cookie": "^0.4.0",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "babel-jest": "^26.6.3",
    "cypress": "^6.6.0",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "jest-css-modules-transform": "^4.2.0",
    "lint-staged": "^10.5.4",
    "postcss-normalize": "^9.0.0",
    "prettier": "2.2.1",
    "prettier-plugin-organize-imports": "^1.1.1",
    "pretty-quick": "^3.1.0",
    "sass": "^1.32.8",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=12.20.x <=14.15.x",
    "npm": "6.14.x"
  },
  "lint-staged": {
    "*.{js, jsx, ts, tsx}": "eslint --cache --fix",
    "*.{js,jsx,json,ts,tsx,yml,md,html,scss,css}": "prettier --write"
  }
}
