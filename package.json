{
  "name": "mca-beacons",
  "version": "1.0.0",
  "description": "Beacons formatting scripts",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "adr": "adr-log -d docs/adr -i",
    "format": "prettier --write './**/*.{java,md,json,yml,js,jsx,json,ts,tsx,yml,md,html,scss,css}'",
    "format:check": "prettier --check './**/*.{java,md,json,yml,js,jsx,json,ts,tsx,yml,md,html,scss,css}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run adr && git add ./docs/adr && pretty-quick --staged && terraform fmt -recursive"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/madetech/mca-beacons-integration.git"
  },
  "author": "MCA",
  "bugs": {
    "url": "https://github.com/madetech/mca-beacons-integration/issues"
  },
  "homepage": "https://github.com/madetech/mca-beacons-integration#readme",
  "devDependencies": {
    "adr-log": "^2.2.0",
    "husky": "^4.3.8",
    "prettier": "2.6.2",
    "prettier-plugin-java": "1.6.1",
    "prettier-plugin-organize-imports": "^2.3.3",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.6.2"
  },
  "engines": {
    "node": ">=12.20.x <=14.15.x",
    "npm": "6.14.x"
  }
}
